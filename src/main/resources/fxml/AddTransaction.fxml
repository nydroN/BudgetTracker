<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.budgettracker.controller.AddTransactionController"
      prefWidth="350.0" prefHeight="400.0">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Yeni İşlem Ekle" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ComboBox fx:id="typeBox" promptText="Tür Seçiniz (Gelir/Gider)" prefWidth="310.0"/>
    <TextField fx:id="categoryField" promptText="Kategori (Örn: Market, Kira)"/>
    <TextField fx:id="amountField" promptText="Tutar (Örn: 150.50)"/>
    <DatePicker fx:id="datePicker" promptText="Tarih Seçiniz" prefWidth="310.0"/>
    <TextArea fx:id="descArea" promptText="Açıklama (Opsiyonel)" prefHeight="80.0"/>

    <Button text="Kaydet" onAction="#handleSave" prefWidth="310.0"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>